{
  "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "module": "esnext",
      "target": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "strict": true,
      "lib": ["dom", "esnext"],
      "esModuleInterop": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      }
  },
  "include": ["src"]
}
